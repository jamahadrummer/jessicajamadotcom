---
import Header from '../components/header.astro';
import Footer from '../components/footer.astro';
const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<Header title={title} />
	</head>
	<body>
		<nav>
			<a href="#">Home</a>
			<a href="#">Posts</a>
			<a href="#">Contact</a>
		</nav>
		<h1>{title}</h1>
		<article>
			<slot />
			<!-- your content is injected here -->
		</article>
		<Footer />
	</body><style>
		h1 {
			font-size: 2rem;
		}
	</style>
</html>
